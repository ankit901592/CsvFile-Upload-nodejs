<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>File Data Display</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
      }
      .container {
        width: 80%;
        margin: 20px auto;
      }
      h1 {
        text-align: center;
        color: #333;
      }
      .card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        margin: 20px 0;
        padding: 20px;
        display: flex;
        align-items: center;
      }
      .card img {
        width: 150px;
        height: 150px;
        border-radius: 8px;
        object-fit: cover;
        margin-right: 20px;
      }
      .card-content {
        flex: 1;
      }
      .card h2 {
        color: #333;
        margin: 0;
        font-size: 1.5em;
      }
      .card p {
        margin: 10px 0;
        color: #666;
      }
      .card .handle {
        font-weight: bold;
        color: #007bff;
      }
      input{
        font-size: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Uploaded File Data</h1>
      <input  type="search" placeholder="Search here" />

      <!-- Loop through filedata array and display each item -->
      <% filedata.forEach((data) => { %>
      <div class="card">
        <!-- Image Src -->
        <img src="<%=data['Image Src']%>" alt="<%= data.Title %>" />

        <!-- Content Section -->
        <div class="card-content">
          <!-- Handle -->
          <p class="handle">@<%= data.Handle %></p>

          <!-- Title -->
          <h2><%= data.Title %></h2>

          <!-- Body -->
          <p><%= data.Body %></p>

          <p><%= data.Tags %></p>
          <h2>Price:<%= data['Variant Price'] %>$</h2>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
